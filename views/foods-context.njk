{% extends "layout.njk" %}

{% block content %}
    
    <section class="food-context">

        {% for food in foods %}
             <img src="{{food.image}}" alt="">
            <div class="food-info">
                <h2>{{food.name}}</h2>
                <h3>{{food.author}}</h3>
            </div>

            <div class="ingredients">
                <div class="ingredients-title">
                    <h2></h2>
                    <h3></h3>
                </div>
                <p>{{food.ingredients}}</p>
            </div>

            <div class="preparation">
                <div class="preparation-title">
                    <h2></h2>
                    <h3></h3>
                </div>
                <p>{{food.preparation}}</p>
            </div>

            <div class="information">
                <div class="information-title">
                    <h2></h2>
                    <h3></h3>
                </div>
                <p>{{food.information}}</p>
            </div>
        {% endfor %}
           

        

    </section>
    <script src="scripts.js"></script>    

{% endblock content %}